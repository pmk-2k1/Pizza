<div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
        <div class="card-img-left d-none d-md-flex">
          <!-- Background image for card set in CSS! -->
        </div>
        <div class="card-body p-4 p-sm-5">
          <h2 class="card-title text-center mb-4 fw-light">Đăng ký</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-floating mb-3">
              <%= f.text_field :full_name, autofocus: true, placeholder: "Username", class: "form-control"%>
              <%= f.label :full_name, "Họ và tên"%>
            </div>
            <div class="form-floating mb-3">
              <%= f.phone_field :phone_number, placeholder: "Phone Number", class: "form-control"%>
              <%= f.label :phone_number, "Số điện thoại"%>
            </div>
            <div class="form-floating mb-3">
              <%= f.text_field :address, placeholder: "Address", class: "form-control"%>
              <%= f.label :address, "Địa chỉ"%>
            </div>
            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Phone Number", class: "form-control"%>
              <%= f.label :password do %>
                Mật khẩu <span>(ít nhất 6 ký tự)</span>
              <% end %>            </div>
            <div class="form-floating mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Phone Number", class: "form-control"%>
              <%= f.label :password_confirmation, "Xác nhận mật khẩu"%>
            </div>
            <div class="d-grid mb-2">
              <%= f.submit "Đăng ký", class:"btn btn-lg btn-primary btn-login fw-bold text-uppercase" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
