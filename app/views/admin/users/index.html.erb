<section class="dashboard">
  <%= render 'admin/nav_left' %>
  <div class="admin_user">
    <div class="admin-form-edit">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">Họ và Tên</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Admin</th>
          </tr>
        </thead>
        <tbody>
          <%@users.each do |user|%>
            <tr>
              <td><%=user.full_name%></td>
              <td><%=user.phone_number%></td>
              <td><%=user.address%></td>
              <td><%=user.admin%></td>
              <td class="button-user">
                <%=button_to "Chỉnh sửa",edit_admin_user_path(user.id), method: :get, class:"admin_edit"%>
                <%=button_to "Xóa", admin_user_path(user.id), method: :delete, class: "admin_destroy", data:{confirm: "Are you sure?" }%>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</section>
